{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "MarkdownRS",
    "version": "0.1.107",
    "identifier": "MarkdownRS",
    "build": {
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build",
        "devUrl": "http://localhost:1420",
        "frontendDist": "../build"
    },
    "app": {
        "windows": [
            {
                "label": "main",
                "title": "MarkdownRS",
                "width": 1200,
                "height": 800,
                "resizable": true,
                "decorations": false,
                "transparent": false,
                "visible": false,
                "backgroundColor": "#1e1e1e"
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "resources": [],
        "copyright": "",
        "category": "Productivity",
        "shortDescription": "The only markdown editor you need.",
        "longDescription": "MarkdownRS is a fast, slim, cross-platform notepad, focused on editing Markdown documents.",
        "createUpdaterArtifacts": true,
        "windows": {
            "nsis": {
                "installerIcon": "icons/icon.ico",
                "installMode": "currentUser",
                "languages": [
                    "English"
                ],
                "displayLanguageSelector": false
            }
        }
    },
    "plugins": {
        "shell": {
            "open": true
        },
        "updater": {
            "endpoints": [
                "https://github.com/USERNAME/REPO/releases/latest/download/latest.json"
            ],
            "dialog": true,
            "pubkey": "YOUR_PUBLIC_KEY_HERE"
        }
    }
}
