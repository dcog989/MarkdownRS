{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "MarkdownRS",
    "version": "0.1.32",
    "identifier": "com.markdownrs.app",
    "build": {
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build",
        "devUrl": "http://localhost:1420",
        "frontendDist": "../build"
    },
    "app": {
        "windows": [
            {
                "label": "main",
                "title": "MarkdownRS",
                "width": 1200,
                "height": 800,
                "resizable": true,
                "fullscreen": false,
                "decorations": false,
                "transparent": true,
                "backgroundColor": "#00000000",
                "visible": false
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "resources": [],
        "copyright": "",
        "category": "Productivity",
        "shortDescription": "A fast, minimal markdown editor",
        "longDescription": ""
    },
    "plugins": {
        "shell": {
            "open": true
        }
    }
}
