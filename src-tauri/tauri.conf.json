{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "MarkdownRS",
  "version": "0.9.5",
  "identifier": "MarkdownRS",
  "build": {
    "beforeDevCommand": "bun run ui:dev",
    "beforeBuildCommand": "bun run ui:build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../build"
  },
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "label": "main",
        "title": "MarkdownRS",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "decorations": false,
        "transparent": false,
        "visible": false,
        "backgroundColor": "#1e1e1e"
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": [],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "copyright": "",
    "category": "Productivity",
    "shortDescription": "The only Markdown editor you need.",
    "longDescription": "MarkdownRS is a fast, slim, cross-platform notepad, focused on editing Markdown documents.",
    "createUpdaterArtifacts": false,
    "fileAssociations": [
      {
        "ext": ["md", "markdown", "mdown", "mkdn", "mkd", "mdwn"],
        "name": "Markdown Document",
        "description": "Markdown Document",
        "role": "Editor",
        "mimeType": "text/markdown"
      },
      {
        "ext": ["txt"],
        "name": "Text Document",
        "description": "Text Document",
        "role": "Editor",
        "mimeType": "text/plain"
      }
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
