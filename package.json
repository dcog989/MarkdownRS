{
  "name": "markdown-rs",
  "description": "The only Markdown editor you need.",
  "version": "0.11.0",
  "private": true,
  "type": "module",
  "scripts": {
    "check": "svelte-kit sync ; bun run lint:types ; bun run lint:frontend ; bun run lint:backend",
    "clean": "rm -rf build .context .svelte-kit node_modules bun.lock dist releases src-tauri/gen src-tauri/target src-tauri/Cargo.lock",
    "crates": "cd src-tauri && cargo update --verbose",
    "dev": "tauri dev",
    "format:check": "prettier . --check && cd src-tauri && cargo fmt -- --check",
    "format": "prettier . --write && cd src-tauri && cargo fmt",
    "lint:backend": "echo \"[Lint] Checking Backend...\" && cd src-tauri && cargo check && cargo clippy --all-targets --all-features -- -D warnings",
    "lint:frontend": "echo \"[Lint] Checking Frontend Syntax...\" && eslint .",
    "lint:types": "echo \"[Lint] Checking Frontend Types...\" && svelte-check --tsconfig ./tsconfig.json --threshold error",
    "lint": "bun run lint:frontend && bun run lint:types && bun run lint:backend",
    "package": "bun scripts/package.js",
    "prepare": "husky",
    "preview": "vite preview",
    "release": "bun scripts/version.js --git",
    "repo:back": "repomix -c .repomix/repomix.src.back.json",
    "repo:front": "repomix -c .repomix/repomix.src.front.json",
    "repo:full": "repomix -c .repomix/repomix.full.json",
    "repo:skel": "repomix -c .repomix/repomix.skel.json",
    "repo:src": "repomix -c .repomix/repomix.src.json",
    "repo:tool": "repomix -c .repomix/repomix.tool.json",
    "tauri": "tauri",
    "ui:build": "bunx --bun vite build",
    "ui:dev": "bunx --bun vite dev",
    "update": "bun update && bun run crates",
    "version": "bun scripts/version.js"
  },
  "dependencies": {
    "@codemirror/autocomplete": "^6.20.0",
    "@codemirror/commands": "^6.10.2",
    "@codemirror/lang-markdown": "^6.5.0",
    "@codemirror/language": "^6.12.1",
    "@codemirror/language-data": "^6.5.2",
    "@codemirror/lint": "^6.9.4",
    "@codemirror/search": "^6.6.0",
    "@codemirror/state": "^6.5.4",
    "@codemirror/view": "^6.39.15",
    "@tauri-apps/api": "^2.10.1",
    "@tauri-apps/plugin-clipboard-manager": "^2.3.2",
    "@tauri-apps/plugin-dialog": "^2.6.0",
    "@tauri-apps/plugin-fs": "^2.4.5",
    "@tauri-apps/plugin-log": "^2.8.0",
    "@tauri-apps/plugin-opener": "^2.5.3",
    "@tauri-apps/plugin-process": "^2.3.1",
    "@tauri-apps/plugin-shell": "^2.3.5",
    "@tauri-apps/plugin-store": "^2.4.2",
    "@tauri-apps/plugin-window-state": "^2.4.1",
    "dompurify": "^3.3.1",
    "lucide-svelte": "^0.575.0",
    "modern-screenshot": "^4.6.8"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@sveltejs/adapter-static": "^3.0.10",
    "@sveltejs/kit": "^2.53.0",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@tauri-apps/cli": "^2.10.0",
    "@types/node": "^25.3.0",
    "autoprefixer": "^10.4.24",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.15.0",
    "eslint": "^10.0.1",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier-plugin-svelte": "^3.5.0",
    "prettier": "^3.8.1",
    "svelte-check": "^4.4.3",
    "svelte": "^5.53.0",
    "typescript-eslint": "^8.56.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  },
  "lint-staged": {
    "*.{js,ts,svelte}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
