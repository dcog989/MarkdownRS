{
    "name": "markdown-rs",
    "version": "0.1.76",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "svelte-kit sync && vite dev",
        "build": "vite build",
        "preview": "vite preview",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "format": "prettier --write .",
        "tauri": "tauri",
        "clean": "npm run clean:node && npm run clean:rust",
        "clean:node": "node -e \"const fs = require('fs'); ['build', '.svelte-kit', 'node_modules'].forEach(dir => fs.rmSync(dir, {recursive: true, force: true, maxRetries: 3, retryDelay: 500}));\"",
        "clean:rust": "node -e \"require('fs').rmSync('src-tauri/target', {recursive: true, force: true, maxRetries: 3, retryDelay: 500});\""
    },
    "dependencies": {
        "@codemirror/commands": "^6.10",
        "@codemirror/lang-markdown": "^6.5",
        "@codemirror/language": "^6.11",
        "@codemirror/language-data": "^6.5",
        "@codemirror/search": "^6.5",
        "@codemirror/state": "^6.5",
        "@codemirror/theme-one-dark": "^6.1",
        "@codemirror/view": "^6.38",
        "@tauri-apps/api": "^2.9",
        "@tauri-apps/plugin-shell": "^2.3",
        "@tauri-apps/plugin-fs": "^2.4",
        "@tauri-apps/plugin-dialog": "^2.4",
        "@tauri-apps/plugin-store": "^2.4",
        "@tauri-apps/plugin-log": "^2.7",
        "@tauri-apps/plugin-opener": "^2.5",
        "clsx": "^2.1",
        "color": "^5.0",
        "dompurify": "^3.3",
        "lucide-svelte": "^0.555",
        "marked": "^17.0",
        "tailwind-merge": "^3.4",
        "@tailwindcss/postcss": "^4.1"
    },
    "devDependencies": {
        "@sveltejs/adapter-static": "^3.0",
        "@sveltejs/kit": "^2.49",
        "@sveltejs/vite-plugin-svelte": "^6.2",
        "@tauri-apps/cli": "^2.9",
        "@types/node": "^24.10",
        "autoprefixer": "^10.4",
        "postcss": "^8.5",
        "prettier": "^3.7",
        "prettier-plugin-svelte": "^3.4",
        "svelte": "^5.45",
        "svelte-check": "^4.3",
        "tailwindcss": "^4.1",
        "tslib": "^2.8",
        "typescript": "^5.9",
        "vite": "^7.2"
    }
}
